{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}

<section id="reset-password">
    <div class="container ">
        <div class="row max-height d-flex align-items-center justify-content-center">
            <div class="col-6">
                {% for flashError in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                {% endfor %}
                <div class="card">
                    <div class="card-header text-center">
                        <h1>Reset Your Password</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email) }}
                        <div class="mt-2">
                            <small>
                                Enter your email address and we we will send you a
                                link to reset your password.
                            </small>
                        </div>
                        <div class="d-grid gap-1 mt-2">
                            <button class="btn btn-danger" type="submit">
                                <i class="fa fa-save"></i> Send password reset email
                            </button>
                        </div>

                        {{ form_end(requestForm) }}
                      <p class="mt-2 text-center"> Don't Have Account?<a href="{{ path('app_register', {  }) }}"> Sign up now</a> </p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>






{% endblock %}
