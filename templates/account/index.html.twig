{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {{ include('ui/_partials/title_section.html.twig', {'name': 'Account details'}) }}
        </div>
    </div>

    <section id="account">
        <div class="container-fluid">
            <div class="row">
                <div class="col">

                    <div class="d-flex align-items-start">
                        <div class="
                        nav
                        flex-column
                        align-items-start
                        justify-content-center
                        nav-pills
                        me-2 p-3
                        border
                        border-dark
                        w-25
"
                             id="v-pills-tab"
                             role="tablist"
                             aria-orientation="vertical"
                        >
                            <button class="nav-link active"
                                    id="v-pills-dashboard-tab"
                                    data-bs-toggle="pill"
                                    data-bs-target="#v-pills-dashboard"
                                    type="button" role="tab"
                                    aria-controls="v-pills-dashboard"
                                    aria-selected="true">
                                <i class="fa fa-tachometer-alt"></i> Dashboard
                            </button>
                            <button class="nav-link"
                                    id="v-pills-account-tab"
                                    data-bs-toggle="pill"
                                    data-bs-target="#v-pills-account"
                                    type="button"
                                    role="tab"
                                    aria-controls="v-pills-account"
                                    aria-selected="false">
                                <i class="fas fa-user-circle"></i> Account Details
                            </button>
                            <button class="nav-link"
                                    id="v-pills-profile-tab"
                                    data-bs-toggle="pill"
                                    data-bs-target="#v-pills-profile"
                                    type="button"
                                    role="tab"
                                    aria-controls="v-pills-profile"
                                    aria-selected="false">
                                <i class="fa fa-store-alt"></i> Orders
                            </button>
                            <button class="nav-link"
                                    id="v-pills-messages-tab" data-bs-toggle="pill"
                                    data-bs-target="#v-pills-messages"
                                    type="button"
                                    role="tab"
                                    aria-controls="v-pills-messages"
                                    aria-selected="false">
                                <i class="fa fa-map-marked"></i> My Address
                            </button>

                        </div>
                        <div class="tab-content w-100" id="v-pills-tabContent">
                            <div class="tab-pane fade show active"
                                 id="v-pills-dashboard"
                                 role="tabpanel"
                                 aria-labelledby="v-pills-dashboard-tab">

                                <div class="card">
                                    <div class="card-header">
                                        Hello {{ app.user.firstname | upper }} {{ app.user.lastname | upper }}
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">Special title treatment</h5>
                                        <p class="card-text">
                                           From yous account dashboard. You can easily check & view your <a class="" href="#">recent order</a>
                                        </p>

                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="v-pills-profile" role="tabpanel"
                                 aria-labelledby="v-pills-profile-tab">
                                Profile
                            </div>
                            <div class="tab-pane fade" id="v-pills-messages" role="tabpanel"
                                 aria-labelledby="v-pills-messages-tab">
                                Message
                            </div>
                            <div class="tab-pane fade" id="v-pills-account" role="tabpanel"
                                 aria-labelledby="v-pills-account-tab">
                                <div class="card">
                                    <div class="card-header">
                                       Account Details
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            Already have an account? <a href="{{ path('app_login', {  }) }}">Log in instead!</a>
                                        </h5>

                                        <form method="post">
                                            <div class="row">

                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-floating mb-3">
                                                        <input name="firstname" type="text" class="form-control" id="floatingInput" placeholder="First name" value="{{ app.user.firstname }}">
                                                        <label for="floatingInput">First Name</label>
                                                    </div>

                                                </div>

                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-floating mb-3">
                                                        <input name="lastname" type="text" class="form-control" id="floatingInput" placeholder="Last name" value="{{ app.user.lastname }}">
                                                        <label for="floatingInput">
                                                            Last Name <span class="text-danger">*</span>
                                                        </label>
                                                    </div>

                                                </div>

                                                <div class="col-md-12 col-sm-12">
                                                    <div class="form-floating mb-3">
                                                        <input name="email" type="email" class="form-control" id="floatingInput" placeholder="Email address" value="{{ app.user.email }}">
                                                        <label for="floatingInput">Email address</label>
                                                    </div>

                                                </div>

                                                <div class="col-md-12 col-sm-12">
                                                    <div class="form-floating mb-3">
                                                        <input name="currentPassword" type="password" class="form-control" id="floatingInput" placeholder="Current Password">
                                                        <label for="floatingInput">
                                                            Current Password <span class="text-danger">*</span>
                                                        </label>
                                                    </div>

                                                </div>

                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-floating mb-3">
                                                        <input name="newPassword" type="password" class="form-control" id="floatingInput" placeholder="New Password">
                                                        <label for="floatingInput">
                                                            New Password <span class="text-danger">*</span>
                                                        </label>
                                                    </div>

                                                </div>

                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-floating mb-3">
                                                        <input name="confirmPassword" type="password" class="form-control" id="floatingInput" placeholder="Confirm Password">
                                                        <label for="floatingInput">
                                                            Confirm Password <span class="text-danger">*</span>
                                                        </label>
                                                    </div>

                                                </div>

                                            </div>

                                            <div class="d-grid gap-1">
                                                <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Save </button>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
{% endblock %}
